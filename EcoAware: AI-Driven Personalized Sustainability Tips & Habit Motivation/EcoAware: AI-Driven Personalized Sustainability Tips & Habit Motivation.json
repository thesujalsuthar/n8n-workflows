      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [
        400,
        550
      ]
    },
    {
      "parameters": {
        "operation": "upsert",
        "collection": "ecoAwareHabits",
        "query": {
          "userId": "={{$json[\"userId\"]}}",
          "habitId": "={{$json[\"habitId\"]}}"
        },
        "replace": false
      },
      "name": "Database - Upsert Habit Progress",
