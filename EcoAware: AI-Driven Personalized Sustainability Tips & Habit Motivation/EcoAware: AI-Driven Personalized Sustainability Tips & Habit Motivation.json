      "typeVersion": 1,
      "position": [
        200,
        300
      ]
    },
    {
      "parameters": {
        "functionCode": "const preferences = items[0].json.preferences || {};\n\nreturn [{ json: { preferences } }];"
      },
      "name": "Extract Preferences",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [
        400,
        300
      ]
    },
    {
      "parameters": {
        "model": "gpt-4o-mini",
        "temperature": 0.7,
        "input": "You are an AI assistant that provides personalized daily sustainability tips. User preferences: {{$json[\"preferences\"]}}.\n\nGenerate a concise list of 3 personalized sustainability tips for today to encourage eco-friendly behaviors. Return them as a JSON array under the key \"tips\"."
      },
      "name": "AI - Generate Sustainability Tips",
      "type": "n8n-nodes-base.openAi",
      "typeVersion": 1,
      "position": [
        650,
        300
      ]
    },
    {
      "parameters": {
        "functionCode": "const tips = JSON.parse(items[0].json.choices[0].message.content).tips;\nreturn [{ json: { tips } }];"
      },
      "name": "Parse AI Tips",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [
        850,
        300
      ]
    },
    {
      "parameters": {
        "event": "webhook",
        "path": "updateHabit",
        "options": {},
        "responseMode": "onReceived"
